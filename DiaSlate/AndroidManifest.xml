<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.example.DiaSlate"
      android:versionCode="7"
      android:versionName="3.0"
      android:installLocation="auto">
      <uses-sdk android:minSdkVersion="15"
          android:targetSdkVersion="17"/>
         
      
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
      <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="com.example.DiaSlate.MainActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                   android:configChanges="orientation|keyboardHidden|screenSize"
            
            android:theme="@style/FullscreenTheme">  
        </activity>
		<activity android:name="com.example.DiaSlate.ColorPicker"
                android:screenOrientation="portrait">
		    
		    <intent-filter>
                <action android:name="android.intent.action.COLORPICKER" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.somitsolutions.color/vnd.somitsolutions.color-value" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.DiaSlate.FileList"
		    android:screenOrientation="landscape"
		    android:label="@string/app_name">
		</activity>
		<activity android:name="com.example.DiaSlate.viewImageActivity"
		     android:screenOrientation="landscape"
		    android:label="@string/app_name"
		    android:configChanges="orientation|keyboardHidden|screenSize"
            
            android:theme="@style/FullscreenTheme">
		</activity>
		
		<activity android:name="com.example.DiaSlate.StartingActivity"
		    android:label="@string/app_name"
		    android:screenOrientation="landscape"
		    android:configChanges="orientation|keyboardHidden|screenSize"
            
            android:theme="@style/FullscreenTheme">
		    <intent-filter>
                <action android:name="com.example.DiaSlate.StartingActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.DiaSlate.Slate"
		    android:label="@string/app_name"
		    android:screenOrientation="landscape">
		    <intent-filter>
                <action android:name="com.example.DiaSlate.SLATE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.DiaSlate.HelpActivity"
		    android:label="@string/app_name"
		    android:screenOrientation="landscape">
		    <intent-filter>
                <action android:name="com.example.DiaSlate.HELPACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.DiaSlate.Helpuml"
		    android:label="@string/app_name"
		    android:screenOrientation="landscape">
		    <intent-filter>
                <action android:name="com.example.DiaSlate.HELPUML" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.DiaSlate.Main"
		    android:label="@string/app_name"
		    android:screenOrientation="landscape">
		    <intent-filter>
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.DiaSlate.startActivity"
		    android:label="@string/app_name"
		    android:screenOrientation="landscape"
		    android:configChanges="orientation|keyboardHidden|screenSize"
            
            android:theme="@style/FullscreenTheme" >
		    <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.DiaSlate.AboutUs"
		   
		    android:screenOrientation="landscape"
		    
		    android:configChanges="orientation|keyboardHidden|screenSize"
		     android:theme="@style/FullscreenTheme">
		    <intent-filter>
                <action android:name="com.example.DiaSlate.AboutUs"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
    </application>
</manifest> 